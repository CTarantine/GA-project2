<form method="POST" action="/employees/{{employee._id}}?_method=PUT">

    <label for="name">Name</label>
    <input type="text" name="name" value="{{employee.name}}"/>

    <label for="age">Age</label>
    <input type="number" name="age" value="{{employee.age}}">

    <label for="title">Title</label>
    <input type="text" name="title" value="{{employee.title}}"/>

    <label for="hireDate">Employee Since</label>
    <input type="date"  name="hireDate" value="{{review.hireDate}}"/>

<br>

     <input type="submit" value="Update Employee" />
</form>