<form method="POST" action="/reviews/{{review._id}}?_method=PUT">

    <label for="name">Name</label>
    <input type="text" name="name" value="{{review.name}}"/>

    <label for="date">Date</label>
    <input type="date" name="date" value="{{review.date}}"/>

    <label for="locationAddress">Location</label>
    <input type="text" name="locationAddress" value="{{review.locationAddress}}"/>

    <label for="review">Review</label>
    <input type="text"  name="review" value="{{review.review}}" />

<br>

     <input type="submit" value="Update Review" />
</form>